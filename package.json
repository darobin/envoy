{
  "name": "envoy",
  "xtype": "module",
  "version": "0.0.1",
  "description": "Experimenting with user agency",
  "author": "Robin Berjon <robin@berjon.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently -k \"build-electron -d -c build-electron.config.cjs\" \"wait-on build/.build-electron-done && electron --trace-warnings .\"",
    "build": "build-electron -c build-electron.config.cjs && npm exec electron-builder --mac"
  },
  "bin": {},
  "main": "build/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/darobin/envoy.git"
  },
  "build": {
    "files": [
      "build/**/*"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "mocha": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {}
  },
  "devDependencies": {
    "build-electron": "^1.0.5",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "electron": "^21.2.3"
  }
}
